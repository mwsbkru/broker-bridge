docker compose run kafka2 bash

/usr/bin/kafka-console-consumer
/usr/bin/kafka-console-producer



/usr/bin/kafka-console-consumer \
    --bootstrap-server kafka1:19092   \
    --topic topic1   \
    --from-beginning  \
    --formatter kafka.tools.DefaultMessageFormatter  \
    --property print.key=true   \
    --property print.value=true

/usr/bin/kafka-console-consumer \
    --bootstrap-server kafka1:19092   \
    --topic topic1   \
    --formatter kafka.tools.DefaultMessageFormatter  \
    --property print.key=true   \
    --property print.value=true



Kafka 1 test
docker compose run kafka2 bash
kafka-console-consumer --bootstrap-server kafka1:19092 --topic topic1 --from-beginning
docker compose exec kafka2 kafka-console-consumer --bootstrap-server kafka1:19092 --topic topic1 --from-beginning

docker compose run kafka3 bash
kafka-console-producer --bootstrap-server kafka1:19092 --topic topic1
docker compose exec kafka3 kafka-console-producer --bootstrap-server kafka1:19092 --topic topic1


